<!DOCTYPE html>
<html>

<head>
  <title>Projectplanner</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <div class='container-fluid'>
      <div class='row'>
        <div class='col-md-8'>
          <h3>Project Planner</h3>
        </div>
        <div class='col-md-4'>
          <div id = 'user'>
              <% if current_user %>
                <%= current_user.email %> | <%= button_to 'Sign Out', destroy_user_session_path, method: 'delete', class: 'btn btn-danger'%>
              <% else %>
                <%= button_to 'Sign In', new_user_session_path, class: 'btn btn-danger'%> | <%= button_to 'Sign Up', new_user_registration_path, class: 'btn btn-danger'%>
              <% end -%>
          </div>
        </div>
      </div>
    </div>  
  </header>


	<% if flash[:notice] %>
		<div class="alert alert-success">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= flash[:notice] %>
		</div>	
	<% elsif flash[:error] %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
	<% end %>

<%= yield %>

</body>
</html>
